<div class="container">
  <div class="new_post_wrap">
    <h1>新規Photo投稿</h1>
    <form method="post" action="#" enctype="multipart/form-data">
      <!-- ファイル選択ボタン -->
      <div class="file_wrap">
        <input type="file" name="upload_file" />
      </div>
      <!-- 説明文 -->
      <div class="textarea_wrap">
        <textarea placeholder="写真に対する説明文を入力" name="caption"></textarea>
      </div>
      <!-- 送信ボタン -->
      <div class="btn_wrap">
        <input type="submit" value="送信">
      </div>
    </form>
  </div>
</div>