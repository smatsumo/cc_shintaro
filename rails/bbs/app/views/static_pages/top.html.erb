<% @tweets.each do |tweet| %>
  <%= tweet[0] %>
  <%= tweet[1] %>
  <%= tweet[2] %>
<%end %>
<div class="top">
  <h2>いまどうしてる？をつぶやこう</h2>
  <div class="tweets">
    <ul>
      <% @tweets.each do |tweet| %>
      <li>
        <%= tweet[0] %>: <%= tweet[1] %>
        <span><%= tweet[2] %></span>
      </li>
      <% end %>
    </ul>
  </div>
</div>
